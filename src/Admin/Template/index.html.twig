{% extends 'base-admin.twig' %}

{% block title %}Admin Dashboard
{% endblock %}

{% block main %}
    <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 m-6">
      {% for user in users %}
        <div class="user-card bg-white p-4 rounded-lg shadow-lg hover:scale-105 transition-transform">
          <div class="user-info flex items-center gap-4">
            <img src="{{ asset('images/user-icon.svg') }}" alt="User Icon" class="user-avatar w-16 h-16 rounded-full bg-gray-200 p-2">
            <div class="user-details">
              <h3 class="text-lg font-semibold text-gray-800">{{ user.firstName }} {{ user.lastName }}</h3>
              <p class="text-sm text-gray-600">{{ user.email }}</p>
            </div>
          </div>
          <a href="{{ path('admin_user_accounts', { id: user.id }) }}" class="view-accounts-btn mt-4 block text-center py-2 px-4 rounded-md bg-[#7B1E3A] hover:bg-[#65152F] text-white font-semibold transition">
            Voir les comptes
          </a>
        </div>
      {% else %}
        <p class="col-span-full text-center text-gray-600">Aucun utilisateur trouv√©.</p>
      {% endfor %}
    </section>
{% endblock %}
