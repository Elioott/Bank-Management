			scale: 105%;
		}
.features {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 30px;
}

.feature-card {
    width: calc(25% - 30px);
    perspective: 1000px;
}

.card-inner {
    position: relative;
    width: 80%;
    padding-top: 100%; /* carré */
    transform-style: preserve-3d;
    transition: transform 0.8s;
}

.feature-card:hover .card-inner {
    transform: rotateY(180deg);
}

.card-front, .card-back {
    position: absolute;
    top: 0;
    left: 0;
    width: 90%;
    height: 90%;
    border-radius: 10px;
    backface-visibility: hidden; /*
    background: linear-gradient(180deg, #b6b6b6 0%, #cfd3f2 100%); */
	background-color: #ffffff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 30px;
    box-shadow: 1px 6px 8px rgba(0, 0, 0, 0.1);
}

.card-front img {
    width: 60px;
    margin-bottom: 15px;
}

.card-front h3 {
    font-size: 1.2rem; 
    color: #2c3e50;
}

.card-back {
    transform: rotateY(180deg);
    font-size: 1rem;
    color: #333;
    background-color: #ffffff;
}
		.testimonials-section {
			background-color: #f1f1f1;
			padding: 50px 20px;
			text-align: center;
		}

		.testimonials {
			display: flex;
			justify-content: space-around;
			flex-wrap: wrap;
		}

		.testimonial {
			width: 45%;
			margin: 20px 0;
			padding: 20px;
			background-color: white;
			border-radius: 5px;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		}

		.testimonial p {
			font-style: italic;
			margin-bottom: 10px;
		}

		.testimonial span {
			font-weight: bold;
		}
	</style>
</head>

