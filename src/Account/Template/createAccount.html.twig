{% extends 'base-client.html.twig' %}

{% block title %}Create Bank Account{% endblock %}

{% block main %}
  <h2>Create a New Bank Account</h2>

  {{ form_start(form) }}

  <div class="mb-3">
    {{ form_label(form.type, 'Account Type') }}
    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
  </div>

  <button type="submit" class="btn btn-primary">Create Account</button>

  {{ form_end(form) }}
{% endblock %}
