{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block main %}
	<div
		class="login-page">
		<!-- Video Background -->
		<video autoplay loop muted playsinline class="background-video">
			<source src="{{ asset('videos/light-background.mp4') }}" type="video/mp4">
			Your browser does not support the video tag.
		</video>

		<!-- Logo -->
		<div class="logo">
			<a href="{{ path('homepage') }}">
				<img class="bank-logo" src="{{ asset('images/logo-clair.png') }}" alt="Bank Logo">
			</a>
		</div>

		<!-- Dark Mode Switch -->
		<div class="dark-mode-switch">
			<img id="themeIcon" src="{{ asset('images/sun.svg') }}" alt="Theme Icon"/>
		</div>

		<!-- Titre -->
		<h1 class="welcome-title">Nous sommes ravis de vous revoir !</h1>

		<!-- Formulaire de connexion -->
		<div class="form-div">
			<form method="post" action="{{ path('login') }}" class="login-form">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<div class="form-group">
					<label for="email">Email</label>
					<input type="text" name="email" id="email" value="{{ last_username }}" required autofocus>
				</div>

				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" name="password" id="password" required>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="btn btn-green" type="submit">
					<img src="{{ asset('images/arrow-circle-right.svg') }}" alt="Right Arrow">
				</button>
			</form>
		</div>


		<!-- Footer Links -->
		<div class="footer-links">
			<a href="{{ path('register_admin') }}">Vous n'avez pas de compte ? S'identifier en tant qu'Admin</a>
			|
			<a href="{{ path('register_customer') }}">Vous n'avez pas de compte ? S'identifier en tant que Client</a>
		</div>

		<div class="footer-links">
			<a href="#">Terms of Use</a>
			|
			<a href="#">Privacy Policy</a>
		</div>
	</div>
{% endblock %}
