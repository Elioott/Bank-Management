{% extends 'base-client.html.twig' %}

{% block title %}Ajouter un bénéficiaire
{% endblock %}

{% block main %}
    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        h1 {
            font-size: 2rem;
            margin: 0 0 1.5rem;
            color:rgb(139, 27, 12);
            font-weight: 600;
            animation: fadeIn 0.4s ease-out;
        }

        form {
            background: white;
            margin: 2rem 0;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            animation: fadeIn 0.6s ease-out;
            max-width: 600px;
            border: 1px solid #e0e0e0;
        }

        form > div {
            margin-bottom: 1.5rem;
            animation: fadeIn 0.5s ease-out forwards;
            opacity: 0;
        }

        form > div:nth-child(1) { animation-delay: 0.2s; }
        form > div:nth-child(2) { animation-delay: 0.3s; }
        form > div:nth-child(3) { animation-delay: 0.4s; }
        form > div:not(div:nth-child(2)) { animation-delay: 0.5s; }

        label {
            display: block;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
            color: #424242;
            font-weight: 500;
        }

        input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #bdbdbd;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background-color: #f5f5f5;
        }

        input:focus {
            border-color: #1a237e;
            background-color: white;
            outline: none;
            box-shadow: 0 0 0 2px rgba(26, 35, 126, 0.1);
        }

        button[type="submit"] {
            background:rgb(120, 49, 19);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            font-weight: 500;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 0.5rem;
            display: inline-block;
        }

        button[type="submit"]:hover {
            background:rgb(97, 40, 15);
            transform: translateY(-2px);
        }

        button[type="submit"]:active {
            transform: translateY(0);
        }

        .alert {
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            border-left: 4px solid transparent;
            animation: fadeIn 0.4s ease-out;
        }

        .alert-danger {
            background-color: #ffebee;
            color: #c62828;
            border-left-color: #c62828;
        }

        .alert-success {
            background-color: #e8f5e9;
            color: #2e7d32;
            border-left-color: #2e7d32;
        }

        @media (max-width: 768px) {
            form {
                padding: 1.5rem;
                margin: 1rem 0;
            }
            
            h1 {
                font-size: 1.75rem;
            }
        }
    </style>

    <h1>Ajouter un bénéficiaire</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="bg-red-500 hover:bg-red-700 text-white px-4 py-2 rounded-md transition">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}